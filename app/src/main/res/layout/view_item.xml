<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondopantalla">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borde"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:text="NombreCurso"
                    android:textColor="#000"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde">


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="47dp"
                    android:layout_height="43dp"
                    app:srcCompat="@drawable/ic_person_outline" />

                <TextView
                    android:id="@+id/profesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:maxLines="2"
                    android:text="profesor"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borde"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_locationaula" />


                <TextView
                    android:id="@+id/aula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/nombre"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="aula"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borde"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_timer" />

                <TextView
                    android:id="@+id/horario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="Hora"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borde"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/fechas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/nombre"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center_horizontal"
                    android:text="fechas"
                    android:textSize="22dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnregistrar"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bordeboton"
                android:drawableLeft="@drawable/registrar"
                android:text="Registrar Asistencia"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/cardview_light_background"
                android:textSize="17dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>